---
import Logo from "./Logo.astro";
import Icon from "./Icon.astro";
---

<section class="w-full text-sm md:text-base">
  <div class="flex justify-between items-center px-10 md:px-20 pb-10">
    <Logo
      url="/images/logo.jpg"
      alt="logo canal de youtube de jimmy dev"
      class="w-16 h-16 md:w-20 md:h-20"
    />
    <div
      class="flex flex-col items-center md:flex-row md:justify-between gap-4"
    >
      <h4>jberriosgallo@gmail.com</h4>
      <div class="flex justify-around gap-4 items-center">
        <Icon
          enlace="https://github.com/JBerriosG"
          url="/github.svg"
          alt="Logo de github"
          class="w-8"
        />
        <Icon
          enlace="https://www.linkedin.com/in/jimmy-berrios-718756b1/"
          url="/linkedin.svg"
          alt="Logo de Linkedin"
          class="w-8"
        />
      </div>
    </div>
  </div>
  <div class="px-10 md:px-20 pb-10">
    <hr />
  </div>
</section>

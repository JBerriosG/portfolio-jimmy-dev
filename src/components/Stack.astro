---
import Icon from "./Icon.astro";
import { t } from "i18next";
---
<section id="stack" class="flex w-full justify-center items-center py-8 px-4 md:px-2 ">
    <div class="flex flex-col w-[1000px] font-bold text-center">
        <h1 class="text-4xl text-white py-4">{t("stack.title")}</h1>
        <h3 class="text-2xl text-white/30 py-8">{t("stack.subtitle")}</h3>
        <div class="flex justify-between items-center gap-6 py-4 w-full">
            <Icon url="/html5.svg" alt="Logo de HTML5" class="w-10 md:w-16"/>
            <Icon url="/css.svg" alt="Logo de CSS" class="w-10 md:w-16"/>
            <Icon url="/javascript.svg" alt="Logo de Javascript" class="w-10 md:w-16"/>
            <Icon url="/astro.svg" alt="Logo de Astro" class="w-10 md:w-16"/>
            <Icon url="/nodejs.svg" alt="Logo de NodeJS" class="w-10 md:w-16"/>
            <Icon url="/angular.svg" alt="Logo de Angular" class="w-10 md:w-16"/>
        </div>
        <div class="flex justify-between items-center gap-6 py-4 w-full">
            <Icon url="/c.svg" alt="Logo de C" class="w-10 md:w-16"/>
            <Icon url="/java.svg" alt="Logo de Java" class="w-10 md:w-16"/>
            <Icon url="/python.svg" alt="Logo de Python" class="w-20 md:w-32"/>
            <Icon url="/spring.svg" alt="Logo de Spring" class="w-10 md:w-16"/>
            <Icon url="/tailwindcss.svg" alt="Logo de Tailwind CSS" class="w-10 md:w-16"/>
            <Icon url="/unity.svg" alt="Logo de Unity" class="w-10 md:w-16"/>
        </div>
    </div>
</section>
---
import Logo from "../components/Logo.astro";
import Icon from "./Icon.astro";
---

<header class="w-full md:px-20">
  <nav
    class="flex justify-around md:justify-between font-bold text-white/30 transition-all"
  >
    <Logo url="/images/logo.jpg" alt="Logo del canal de youtube" class="w-16 h-16 md:w-20 md:h-20" />
    <div class="flex flex-col md:flex-row gap-8 md:gap-20">
        <div class="flex flex-row  justify-center gap-4 items-center">
          <a href="#">Inicio</a>
          <a href="#stack">Tech Stack</a>
          <a href="#projects">Proyectos</a>
        </div>
        <div class="flex flex-row justify-evenly gap-4 items-center">
          <Icon
            enlace="https://github.com/JBerriosG"
            url="/github.svg"
            alt="Logo de github"
            class="w-8"
          />
          <Icon
            enlace="www.youtube.com/@JimmyDevAndGeek"
            url="/youtube.svg"
            alt="Logo de youtube"
            class="w-8"
          />
          <Icon
            enlace="https://www.instagram.com/jberriosgallo/"
            url="/Instagram.svg"
            alt="Logo de instagram"
            class="w-8"
          />
        </div>
    </div>
  </nav>
</header>
